<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="@string/pref_location_config">

        <Preference
            android:defaultValue=""
            android:key="pref_location_departure"
            android:title="@string/pref_location_departure" />

        <Preference
            android:defaultValue=""
            android:key="pref_location_arrival"
            android:title="@string/pref_location_arrival" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_time_config">

        <Preference
            android:defaultValue=""
            android:key="pref_time_departure"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_time_arrival" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_path_config">

        <Preference
            android:defaultValue=""
            android:key="pref_path_1"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_path_1" />

    </PreferenceCategory>

</PreferenceScreen>
